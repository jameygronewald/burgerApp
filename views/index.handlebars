

<div class="container">
    <h1>Eat-Da-Burger!</h1>
    <div id="categories">
        <h3>On the menu:</h3>
        <div></div>
        <div></div>
        <h3>Devoured:</h3>
    </div>
    <ul>
        {{#each burger}}
            <li {{#if devoured}}class="devouredRow"{{else}}class="burgerRow"{{/if}} data-devoured="{{devoured}}">
                <div class="burgerListItem">{{id}}. {{burger_name}}</div>
                {{#if devoured}}<div class="placeholder"></div>{{else}}<button  data-id="{{id}}" class="devourButton">Devour it!</button>{{/if}}
                <div class="placeholder"></div>
            </li>
        {{/each}}
    </ul>
</div>
<form>
    <input type="text-area" id="burgerInput" name="name" /> 
    <br>
    <button type="submit" id ="submitButton">Add Burger</button>
</form>
<p>Enter a burger you'd like to eat and click the "Add Burger" button.</p>